#!/bin/bash

scripts/clean
mkdir build
DANKGRINDER="dankgrinder"
DANKSELLER="dankseller"
DANKSWARM="dankswarm"

if [ "${GOOS}" = "windows" ]; then
  DANKGRINDER="${DANKGRINDER}.exe"
  DANKSELLER="${DANKSELLER}.exe"
  DANKSWARM="${DANKSWARM}.exe"
fi

(cd cmd/dankgrinder; go build -v -o "../../build/${DANKGRINDER}" .)
(cd cmd/dankseller; go build -v -o "../../build/${DANKSELLER}" .)
(cd cmd/dankswarm; go build -v -o "../../build/${DANKSWARM}" .)
